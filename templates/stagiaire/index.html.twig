{% extends 'base.html.twig' %}

{% block title %}Liste des stagiaires{% endblock %}

{% block body %}

<h1>Liste des stagiaires</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Ville</th>
            <th>Date de Naissance</th>
            <th>Âge</th>
            <th>Email</th>
            <th>Numéro de téléphone</th>
        </tr>
    </thead>
{% for stagiaire in stagiaires %}
    <tr scope="col">
        <td scope="'row"> {{ stagiaire.prenom }} </td>
        <td scope="'row"> {{ stagiaire.nom }} </td>
        <td scope="'row"> {{ stagiaire.ville }} </td>
        <td scope="'row"> {{ stagiaire.dateFormatee }} </td>
        <td scope="'row"> {{ stagiaire.age }} ans </td>
        <td scope="'row"> {{ stagiaire.email }} </td>
        <td scope="'row"> {{ stagiaire.numTel }} </td>
    </tr>
{% endfor %}
</table>

<h4>Ajouter un stagiaire</h4>

{{ form_start(formAddStagiaire) }}
<div class="row">
    <div class="col-sm">
        {{ form_row(formAddStagiaire.nom) }}
    </div>
    <div class="col-sm">
        {{ form_row(formAddStagiaire.prenom) }}
    </div>
    <div class="col-sm">
        {{ form_row(formAddStagiaire.sexe) }}
    </div>
</div>
<div class="row">
    <div class="col-sm">
        {{ form_row(formAddStagiaire.dateNaissance) }}
        {{ form_row(formAddStagiaire.email) }}
        {{ form_row(formAddStagiaire.numTel) }}
    </div>
    <div class="col-sm">
        {{ form_row(formAddStagiaire.dateNaissance) }}
        {{ form_row(formAddStagiaire.ville) }}
    </div>
</div>
{{ form_row(formAddStagiaire.Valider) }}
{{ form_end(formAddStagiaire) }}

{% endblock %}
